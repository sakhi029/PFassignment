#include <iostream>
using namespace std;
int main() {
    int x,y,sum,diff,pro;
    float rem;
    cout<<"enter two numbers";
    cin>>x>>y;
    sum=x+y;
    diff=x-y;
    pro=x*y;
    rem=x/y;
    cout<<"sum= "<<sum<< ",difference= "<<diff<< ",product= " <<pro<< ",quotient= "<<rem;
    return 0;
}
